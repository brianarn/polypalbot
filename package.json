{
  "name": "polypalbot",
  "version": "0.0.1",
  "description": "A Node.js-based Twitch chat bot to provide interesting data about some fun Polygon streams",
  "main": "index.js",
  "dependencies": {
    "dotenv": "5.0.1",
    "twitch-js": "2.0.0-alpha.20"
  },
  "devDependencies": {
    "ghooks": "2.0.4",
    "tap": "12.0.1"
  },
  "scripts": {
    "start": "node index.js",
    "test": "tap test/**/*.js"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm test",
      "pre-push": "npm test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brianarn/polypalbot.git"
  },
  "keywords": [
    "twitch",
    "polygon"
  ],
  "author": "Brian Sinclair",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/brianarn/polypalbot/issues"
  },
  "homepage": "https://github.com/brianarn/polypalbot#readme"
}
